{
    "mainBar": {
        "layer": "top",
        "position": "top",
        "margin-left": 10,
        "margin-right": 10,
        "margin-top": 5,
        "margin-bottom": 0,
        "reload_style_on_change": true,
        "modules-left": ["clock","custom/endpoint","tray"],
        "modules-center": ["hyprland/workspaces"],
        "modules-right": ["group/expand","pulseaudio","pulseaudio#microphone","bluetooth","network","battery", "custom/notification"],


        "hyprland/workspaces": {
            "format": "{name}" 
        },

        "custom/notification": {
            "tooltip": false,
            "format": "Û∞Çú",
            "on-click": "swaync-client -t -sw",
            "escape": true
        },
        
        "clock": {
            "format": " {:%T | %A | %d/%m/%y}",
            "interval": 1,   
            "tooltip-format": "<tt><small>{calendar}</small></tt>",
            "calendar": {
                "mode": "year",
                "mode-mon-col": 3,
                "weeks-pos": "right",
                "on-scroll": 1,
                "format": {
                    "months": "<span color='#fAfBfC'><b>{}</b></span>",
                    "days": "<span color='#fAfBfC'><b>{}</b></span>",
                    "weeks": "<span color='#fAfBfC'><b>W{}</b></span>",
                    "weekdays": "<span color='#fAfBfC'><b>{}</b></span>",
                    "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
                }
            },
            "actions": {
                "on-click-right": "mode"
            }
        },

        "network": {
            "format-wifi": "Ôá´",
            "format-ethernet":"Óºâ",
            "format-disconnected": "Ó¨Å",
            "tooltip-format-disconnected": "Error",
            "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
            "tooltip-format-ethernet": "{ifname} üñß ",
            "on-click": "nm-connection-editor"
        },

        "bluetooth": {
            "format-on": "Û∞ÇØ",
            "format-off": "BT-off",
            "format-disabled": "Û∞Ç≤",
            "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
            "format-alt": "{device_alias} Û∞ÇØ",
            "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
            "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
            "on-click-right": "blueman-manager"
        }, 

        "battery": {
            "interval":10,
            "states": {
                "good": 95,
                "warning": 30,
                "critical": 15
            },
            "format": "{capacity}% {icon}",
            "format-charging": "{capacity}% Û∞ÇÑ",
            "format-plugged": "{capacity}% Û∞ÇÑ Ó¨≠",
            "format-alt": "{time} {icon}",
            "format-icons": [ "Û∞Åª","Û∞Åº","Û∞Åæ","Û∞ÇÄ","Û∞ÇÇ","Û∞Åπ" ]
        },

        "pulseaudio": {
            "format": "{volume}% {icon}",
            "format-muted": "Óª®",
            "on-click": "wpctl set-mute @DEFAULT_SINK@ toggle",
            "on-click-right": "pavucontrol",
            "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_SINK@ 1%+",
            "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 1%-",
            "scroll-step": 2.5,
            "format-icons": {
                "headphone": "Û±°è",
                "hands-free": "Û±°è",
                "headset": "Û±°è",
                "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
            }
        },

        "pulseaudio#microphone": {
            "format": "{format_source}",
            "format-source": "ÔÑ∞",
            "format-source-muted": "ÔÑ±",
            "on-click": "wpctl set-mute @DEFAULT_SOURCE@ toggle",
            "on-click-right": "pavucontrol"
        },

        "custom/expand": {
            "format": "ÔÑÑ",
            "tooltip": false
        },

        "custom/endpoint":{
            "format": "|",
            "tooltip": false
        },

        "group/expand": {
            "orientation": "horizontal",
            "drawer": {
                "transition-duration": 600,
                "transition-to-left": true,
                "click-to-reveal": true
            },
            "modules": ["custom/expand","cpu","memory","temperature","backlight","custom/endpoint"]
        },

        "cpu": {
            "format": "{usage}% Ó∞ô",
            "tooltip": true
        },

        "memory": {
            "format": "{}% ÓøÖ",
            "tooltip": true,
            "tooltip-format": "Memory: {used:0.1f}GiB used\nSwap: {swapUsed:0.1f}GiB used"
        },

        "temperature": {
            "critical-threshold": 80,
            "format": "{temperatureC}¬∞C {icon}",
            "format-icons": ["Ôãã", "Ôãã", "Ôãã", "Ôãâ", "Ôãâ", "Ôãâ", "Ôãâ", "Ôãà", "Ôãá", "Óº™"]
        },

        "backlight": {
            "format": "{percent}% {icon}",
            "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
            "on-scroll-up": "brightnessctl s 1%+",
            "on-scroll-down": "brightnessctl s 1%-",
            "scroll-step": 2.5,
            "tooltip-format": "Screen Brightness"
        },

        "tray": {
            "icon-size": 14,
            "spacing": 6
        }
    }
} 

